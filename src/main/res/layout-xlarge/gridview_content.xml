<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gridview_lifestories"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <ImageView android:id="@+id/lifestories_imageview"
        android:contentDescription="@string/contentDes_lifestories" 
       	android:layout_width="match_parent"
       	android:layout_height="match_parent"
       	android:layout_margin="8dp"
       	android:layout_alignParentTop="true" />
    
    <TextView android:id="@+id/lifestories_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:layout_below="@id/lifestories_imageview"
        android:textColor="#000000"
        android:hint="@string/new_lifestory" />

</RelativeLayout>