<LinearLayout
    android:id="@+id/parent_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gcomponent="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffffff"
    android:focusableInTouchMode="true" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/normal_schedule_image_button_height"
        android:layout_gravity="center">

        <dk.aau.cs.giraf.gui.GirafButton
            android:id="@+id/schedule_image"
            android:layout_width="@dimen/normal_schedule_image_button_height"
            android:layout_height="fill_parent"
            app:icon="@drawable/add_sequence_picture"/>

        <EditText
            android:id="@+id/editText"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:hint="@string/unnamed_sequence"
            android:imeOptions="actionDone"
            android:inputType="textImeMultiLine"
            android:text=""
            android:textSize="20sp"/>


        <Spinner
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/spinner"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <View
        android:background="#000000"
        android:layout_height="2dp"
        android:layout_width="fill_parent"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/completeWeekLayout">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:gcomponent="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/green"
            android:layout_weight="1"
            android:id="@+id/sectionMonday">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/normal_weekday_button_height"
                android:background="#ff007700"
                android:clickable="false"
                android:focusable="true"
                android:id="@+id/monday_top_frame">

                <dk.aau.cs.giraf.gui.GToggleButton
                    gcomponent:Toggled="true"
                    android:onClick="weekdaySelected"
                    android:id="@+id/monday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:alpha="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/monday"
                    android:id="@+id/mondayStoryName"
                    android:layout_gravity="center"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/normal_weekday_text_width"/>
            </FrameLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mondayScroll"
                android:layout_centerHorizontal="true"
                android:layout_alignParentStart="false"
                android:layout_alignParentLeft="false"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="60dp"
                android:fillViewport="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/layoutMonday"
                    android:dividerPadding="2dp"
                    android:gravity="center">
                </LinearLayout>

            </ScrollView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/border_monday"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/frameLayout7" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/purple"
            android:id="@+id/sectionTuesday"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:gcomponent="http://schemas.android.com/apk/res-auto">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/normal_weekday_button_height"
                android:background="#ff800080"
                android:id="@+id/frameLayout">

                <dk.aau.cs.giraf.gui.GToggleButton
                    gcomponent:Toggled="true"
                    android:onClick="weekdaySelected"
                    android:id="@+id/tuesday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:alpha="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/tuesday"
                    android:layout_gravity="center"
                    android:id="@+id/tuesdayStoryName"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/normal_weekday_text_width"/>
            </FrameLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tuesdayScroll"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="60dp"
                android:fillViewport="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/layoutTuesday"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    />
            </ScrollView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/border_tuesday"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/frameLayout" />

        </RelativeLayout><RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/orange"
        android:id="@+id/sectionWednesday"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:gcomponent="http://schemas.android.com/apk/res-auto">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_weekday_button_height"
            android:background="#ffff8500"
            android:id="@+id/frameLayout2">

            <dk.aau.cs.giraf.gui.GToggleButton
                gcomponent:Toggled="true"
                android:onClick="weekdaySelected"
                android:id="@+id/wednesday"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:alpha="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/wednesday"
                android:layout_gravity="center"
                android:id="@+id/wednesdayStoryName"
                android:textColor="@color/text_color"
                android:textSize="@dimen/normal_weekday_text_width"/>
        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/wednesdayScroll"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp"
            android:fillViewport="true"
            >


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/layoutWednesday"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center"
                />
        </ScrollView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/frameLayout2"
            android:id="@+id/border_wednesday"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/blue"
        android:id="@+id/sectionThursday"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:gcomponent="http://schemas.android.com/apk/res-auto">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_weekday_button_height"
            android:background="#ff0000ff"
            android:id="@+id/frameLayout3">

            <dk.aau.cs.giraf.gui.GToggleButton
                gcomponent:Toggled="true"
                android:onClick="weekdaySelected"
                android:id="@+id/thursday"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:alpha="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/thursday"
                android:layout_gravity="center"
                android:id="@+id/thursdayStoryName"
                android:textColor="@color/text_color"
                android:textSize="@dimen/normal_weekday_text_width"/>
        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/thursdayScroll"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp"
            android:fillViewport="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/layoutThursday"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center"
                />
        </ScrollView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/border_thursday"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/frameLayout3" />

    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/yellow"
            android:id="@+id/sectionFriday">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_weekday_button_height"
            android:background="#ffffdd00"
            android:id="@+id/frameLayout4">

            <dk.aau.cs.giraf.gui.GToggleButton
                gcomponent:Toggled="true"
                android:onClick="weekdaySelected"
                android:id="@+id/friday"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:alpha="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/friday"
                android:layout_gravity="center"
                android:id="@+id/fridayStoryName"
                android:textColor="#000000"
                android:textSize="@dimen/normal_weekday_text_width"/>

        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fridayScroll"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp"
            android:fillViewport="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/layoutFriday"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center"
                />
        </ScrollView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/border_friday"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/frameLayout4" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/red"
            android:id="@+id/sectionSaturday"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:gcomponent="http://schemas.android.com/apk/res-auto">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/normal_weekday_button_height"
                android:background="#ffff0000"
                android:id="@+id/frameLayout5">

                <dk.aau.cs.giraf.gui.GToggleButton
                    gcomponent:Toggled="true"
                    android:onClick="weekdaySelected"
                    android:id="@+id/saturday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:alpha="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/saturday"
                    android:layout_gravity="center"
                    android:id="@+id/saturdayStoryName"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/normal_weekday_text_width"/>
            </FrameLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/saturdayScroll"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="60dp"
                android:fillViewport="true"

                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/layoutSaturday"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:gravity="center"/>
            </ScrollView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/border_saturday"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/frameLayout5" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:id="@+id/sectionSunday"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:gcomponent="http://schemas.android.com/apk/res-auto">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/normal_weekday_button_height"
                android:background="#ffffffff"
                android:id="@+id/frameLayout6">

                <dk.aau.cs.giraf.gui.GToggleButton
                    gcomponent:Toggled="true"
                    android:onClick="weekdaySelected"
                    android:id="@+id/sunday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:alpha="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/sunday"
                    android:layout_gravity="center"
                    android:id="@+id/sundayStoryName"
                    android:textColor="#000000"
                    android:textSize="@dimen/normal_weekday_text_width"/>
            </FrameLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sundayScroll"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="60dp"
                android:fillViewport="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/layoutSunday"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    />
            </ScrollView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/border_sunday"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/frameLayout6" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>