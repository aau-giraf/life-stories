<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gcomponent="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:layout_weight="1"
    android:id="@+id/portraitMonday">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/weekday_button_height_portrait"
        android:background="#ff007700"
        android:clickable="false"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/monday"
            android:id="@id/storyName"
            android:layout_gravity="center"
            android:textSize="@dimen/weekday_text_width_portrait"
            android:textColor="@color/text_color" />
    </FrameLayout>

    <ScrollView
        android:layout_width="@dimen/weekday_horizontal_scroll_view"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="false"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/layoutMonday"
            android:dividerPadding="2dp">
        </LinearLayout>

    </ScrollView>

</RelativeLayout>