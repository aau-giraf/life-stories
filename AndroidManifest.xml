<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dk.aau.cs.giraf.tortoise"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/title_activity_tortoise_startup_screen"
        android:screenOrientation="landscape"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="dk.aau.cs.giraf.tortoise.MainActivity"
            android:label="@string/title_activity_tortoise_startup_screen"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar" >
            <!--meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="dk.aau.cs.giraf.TortoiseStartupScreen" /-->

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="dk.aau.cs.giraf.tortoise.EditModeActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="dk.aau.cs.giraf.tortoise.ViewModeActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
    </application>

</manifest>