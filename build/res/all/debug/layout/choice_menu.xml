<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/choiceMenu"
    android:orientation="vertical"
    android:gravity="center_horizontal" >
    <ScrollView 
        android:id="@+id/addedChoicesScrollView"
        android:layout_height="450dp"
        android:layout_width="280dp"
	   	android:layout_marginTop="25dp"
	   	android:fadeScrollbars="false">
	   	<LinearLayout 
	   	    android:id="@+id/newChoiceContent"
	   	    android:layout_width="match_parent"
	   	    android:layout_height="wrap_content"
	   	    android:gravity="center_horizontal"
	   	    android:orientation="vertical"
	   	    android:minHeight="450dp" >
	   	</LinearLayout>
    </ScrollView>
    <ImageButton 
	    android:id="@+id/addChoice"
	    android:layout_width="200dp"
	    android:layout_height="95dp"
	    android:layout_marginTop="25dp"
	    android:scaleType="fitCenter"
	    android:src="@drawable/add"
	    android:background="@drawable/custom_btn"/>
	<ImageButton 
	    android:id="@+id/selectChoices"
	    android:layout_width="200dp"
	    android:layout_height="95dp"
	    android:layout_marginTop="25dp"
	    android:scaleType="fitCenter"
	    android:src="@drawable/select_choice"
	    android:background="@drawable/custom_btn"/>
	
</LinearLayout><!-- From: file:/D:/Windows%207/Dokumenter/SVN/P6%20-%20SW615F14/Temp%20Git/Tortoise/res/layout/choice_menu.xml -->