<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="700dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_box_bg"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="25dp" >

    <TextView
        android:id="@+id/title"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="left"
        android:layout_marginBottom="22dp"
        android:text="@string/dialog_select_choice_title"
        android:textSize="28sp"
        android:textColor="@color/text_color" />
	<ScrollView 
          android:id="@+id/message"
          android:layout_height="150dp"
          android:layout_width="500dp"
          android:layout_below="@+id/title"
          android:layout_centerHorizontal="true"
		  android:layout_marginBottom="32dp"
		  android:fadeScrollbars="false">
		  <LinearLayout 
		   	    android:id="@+id/choiceContent"
		   	    android:layout_width="match_parent"
		   	    android:layout_height="wrap_content"
		   	    android:gravity="left"
		   	    android:orientation="vertical"
		   	    android:minHeight="150dp" >

		  </LinearLayout>
  	</ScrollView>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/btn_yes"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:layout_weight="0.5"
            android:background="@drawable/custom_btn"
            android:gravity="center"
            android:text="@string/ok"
            android:textSize="26sp"
            android:textColor="@color/text_color" />

        <Button
            android:id="@+id/btn_no"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_weight="0.5"
            android:background="@drawable/custom_btn"
            android:gravity="center"
            android:text="@string/abort"
            android:textSize="26sp"
            android:textColor="@color/text_color" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/D:/Windows%207/Dokumenter/SVN/P6%20-%20SW615F14/Temp%20Git/Tortoise/res/layout/dialog_select_choice.xml -->