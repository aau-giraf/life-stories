<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  	android:id="@+id/editMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView 
        android:id="@+id/storyImage"
        android:layout_width="50dp"
       	android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/gbutton"
       	android:src="@drawable/no_image"
       	android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"/>
	<EditText 
	    android:id="@+id/storyName"
	    android:layout_width="200dp"
	    android:layout_height="wrap_content"
        android:layout_toRightOf="@id/storyImage"
        android:layout_marginLeft="5dp"
	    android:saveEnabled="true"
	    android:maxLength="40"
	    android:lines="1"
	    android:selectAllOnFocus="true"
	   	android:background="#00000000"
        android:textColorHighlight="#00000000"
	   	android:gravity="left"
	    android:textSize="20sp"
        android:textColor="@color/text_color"
	    android:layout_centerVertical="true"
	    android:hint="@string/story_name"
        android:textAlignment="textStart"
        android:textIsSelectable="false" />




	    <ImageButton 
	        android:id="@+id/exitEditMode"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
	    	android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
	    	android:src="@drawable/exit"
	    	android:background="@drawable/gbutton" />

    <ImageButton
        android:id="@+id/save"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/exitEditMode"
        android:scaleType="centerCrop"
        android:src="@drawable/save"
        android:background="@drawable/gbutton"/>

    <ImageButton
        android:id="@+id/largeFrame"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/save"
        android:scaleType="centerCrop"
        android:src="@drawable/add_large"
        android:background="@drawable/gbutton"/>

    <ImageButton
        android:id="@+id/printSequence"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/largeFrame"
        android:scaleType="centerCrop"
        android:src="@drawable/add_small"
        android:background="@drawable/gbutton"/>

    <ImageView
        android:id="@+id/bin"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_toLeftOf="@id/printSequence"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:src="@drawable/bin_closed"/>


</RelativeLayout>