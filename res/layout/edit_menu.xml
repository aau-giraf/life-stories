<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  	android:id="@+id/editMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    <ImageView 
        android:id="@+id/storyImage"
        android:layout_width="150dp"
       	android:layout_height="150dp"
       	android:layout_marginTop="25dp"
       	android:background="@drawable/gbutton"
       	android:src="@drawable/no_image"
       	android:scaleType="centerCrop"/>
	<EditText 
	    android:id="@+id/storyName"
	    android:layout_width="200dp"
	    android:layout_height="75dp"
	    android:saveEnabled="true"
	    android:maxLength="40"
	    android:lines="1"
	    android:selectAllOnFocus="true"
	   	android:background="#00000000"
	   	android:gravity="center_horizontal"
	    android:textSize="25sp"
	    android:layout_marginTop="10dp"
	    android:hint="@string/story_name"/>
	<ImageButton
	    android:id="@+id/smallFrame"
	    android:layout_width="200dp"
	    android:layout_height="95dp"
	    android:layout_marginTop="25dp"
	    android:scaleType="fitCenter"
	    android:src="@drawable/add_small"
	    android:background="@drawable/gbutton"/>
	<ImageButton 
	    android:id="@+id/largeFrame"
	    android:layout_width="200dp"
	    android:layout_height="95dp"
	    android:layout_marginTop="10dp"
	    android:scaleType="fitCenter"
	    android:src="@drawable/add_large"
	    android:background="@drawable/gbutton"/>
	<LinearLayout 
	    android:layout_width="200dp"
	    android:layout_height="95dp"
	    android:orientation="horizontal"
	    android:layout_marginTop="10dp">
	    <ImageButton 
	        android:id="@+id/save"
	        android:layout_width="95dp"
	    	android:layout_height="95dp"
	    	android:scaleType="fitCenter"
	    	android:src="@drawable/save"
	    	android:background="@drawable/gbutton"/>
	    <ImageButton 
	        android:id="@+id/exitEditMode"
	        android:layout_width="95dp"
	    	android:layout_height="95dp"
	    	android:layout_marginLeft="10dp"
	    	android:scaleType="fitCenter"
	    	android:src="@drawable/exit"
	    	android:background="@drawable/gbutton"/>
	</LinearLayout>
	<ImageView
	    android:id="@+id/bin"
    	android:layout_width="110dp"
    	android:layout_height="110dp"
    	android:layout_marginTop="25dp"/>
</LinearLayout>